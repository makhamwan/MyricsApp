<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="64px"
                android:fontFamily="sans-serif-condensed"
                android:text="Search My Favorite"
                android:textSize="30sp" />

            <View style="@style/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="64px"
                android:layout_marginRight="64px"
                android:layout_marginTop="64px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_fav"
                    style="@android:style/Widget.Holo.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:hint="search"
                    android:inputType="textPersonName"
                    android:lineSpacingExtra="10sp"
                    android:padding="64px"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/search_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_search"
                    android:textSize="20sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="64px"
                android:paddingBottom="32px"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:paddingTop="32px" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>